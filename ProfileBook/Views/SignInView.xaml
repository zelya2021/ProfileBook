<?xml version="1.0" encoding="UTF-8"?>
<ContentPage  xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProfileBook.Views.SignInView" Title="Users SingIn">

    <StackLayout>
        <StackLayout Orientation="Vertical" HorizontalOptions="Center" Margin="0, 110, 0, 120" WidthRequest="250">
            <Entry x:Name="loginEntry" Placeholder="Login" Completed="loginEntry_Completed"/>
            <Entry x:Name="passwordEntry"  Placeholder = "Password" IsPassword ="True" Completed="passwordEntry_Completed"/>
        </StackLayout>
        <Button Text = "SIGN IN" FontSize="Large" BorderWidth="1" BackgroundColor="#e2831d" Clicked="FindUser"
                 HorizontalOptions="Center" VerticalOptions="CenterAndExpand" Margin="0, 40, 0, 0" WidthRequest="250"/>

        <Label HorizontalOptions="Center"
                   VerticalOptions="CenterAndExpand" Margin="0, 0, 0, 30">
            <Label.FormattedText>
                <FormattedString>
                    <Span Text="SIGN UP"
                             TextColor="Blue"
                             TextDecorations="Underline" FontSize="20">
                        <Span.GestureRecognizers>
                            
                        </Span.GestureRecognizers>
                    </Span>
                </FormattedString>
            </Label.FormattedText>
        </Label>

    </StackLayout>
</ContentPage>