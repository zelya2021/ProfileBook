<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProfileBook.Views.SignUpView" Title="SignUp">
    <StackLayout>
        <StackLayout Orientation="Vertical" HorizontalOptions="Center" Margin="0, 110, 0, 120" WidthRequest="250">
            <Entry x:Name="loginEntry" Placeholder="Login" Completed="loginEntry_Completed"/>
            <Entry x:Name="passwordEntry"  Placeholder = "Password" IsPassword ="True" Completed="passwordEntry_Completed"/>
            <Entry x:Name="confirmPassword"  Placeholder = "Confirm Password" IsPassword ="True" Completed="confirmPassword_Completed"/>
        </StackLayout>
        <Button Text = "SIGN UP" FontSize="Large" BorderWidth="1" BackgroundColor="#e2831d" Clicked="Button_Clicked"
                 HorizontalOptions="Center" VerticalOptions="CenterAndExpand" Margin="0, 40, 0, 0" WidthRequest="250"/>
    </StackLayout>
</ContentPage>