<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:prism="http://prismlibrary.com"
             prism:ViewModelLocator.AutowireViewModel="True"
             x:Class="ProfileBook.Views.AddEditProfile"
             Title="{Binding Title}">
    <ContentPage.ToolbarItems>
        <ToolbarItem IconImageSource="ic_save.png" Priority="0" Command="{Binding ClickOnSave}"/>
    </ContentPage.ToolbarItems>
    
    <StackLayout Margin="20,0,20,0">
        <Image Source="{Binding Image}" HeightRequest="300"/>
        <Entry Text="{Binding Name}" Placeholder="NickName"/>
        <Entry Text="{Binding NickName}" Placeholder="Name"/>
        <Editor Text="{Binding Description}" Placeholder="Description" Margin="0,25,0,0" MaxLength="120"/>
    </StackLayout>
</ContentPage>